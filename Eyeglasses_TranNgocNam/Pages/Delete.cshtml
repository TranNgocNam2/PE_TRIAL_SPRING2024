@page
@model Eyeglasses_TranNgocNam.Pages.Delete


<h1>Do you want to delete this</h1>

<div class="container">
    <form method="post">
        <div class="form-group">
            <label>Eyeglasses ID:</label>
            <input type="text" asp-for="Eyeglass.EyeglassesId" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Eyeglasses Name:</label>
            <input type="text" asp-for="Eyeglass.EyeglassesName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Eyeglasses Description:</label>
            <input type="text" asp-for="Eyeglass.EyeglassesDescription" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Frame Color:</label>
            <input type="text" asp-for="Eyeglass.FrameColor" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Price:</label>
            <input type="text" asp-for="Eyeglass.Price" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Quantity:</label>
            <input type="text" asp-for="Eyeglass.Quantity" class="form-control" readonly />
        </div>
         <div class="form-group">
             <label>Lens Type:</label>
             <input type="text" value="@Model.LensTypeName" class="form-control" readonly />
         </div>
        
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>